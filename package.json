{
  "name": "@gis/core",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "24.12.0"
  },
  "scripts": {
    "dev": "concurrently -n \"shared,apps\" \"pnpm --filter @gis/shared dev\" \"pnpm --filter !@gis/shared -r --parallel dev\"",
    "build": "pnpm -r run clean && pnpm --filter @gis/shared build && pnpm --filter !@gis/shared -r --parallel build",
    "start": "concurrently \"pnpm -r --parallel start\"",
    "lint": "pnpm -r --parallel --continue-on-error lint",
    "lint:fix": "pnpm -r --parallel run lint:fix",
    "check": "concurrently -n \"lint,format\" \"pnpm lint\" \"pnpm format\"",
    "test": "pnpm -r --parallel run test",
    "test:watch": "pnpm -r --parallel run test:watch",
    "clean": "pnpm -r --parallel run clean",
    "shared:dev": "pnpm --filter @gis/shared dev",
    "shared:build": "pnpm --filter @gis/shared run build",
    "backend:dev": "pnpm --filter @gis/backend dev",
    "frontend:dev": "pnpm --filter @gis/frontend dev"
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.1"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "node ./scripts/tslint.js",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,css,json,md}": [
      "prettier --write"
    ]
  }
}
