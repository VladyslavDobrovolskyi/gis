{
  "name": "@gis/backend",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "pnpm run clean && tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "prettier:check": "pnpm prettier --check **/*.{ts,js,json,html,css,yaml,yml}",
    "prettier:write": "pnpm prettier --write **/*.{ts,js,json,html,css,yaml,yml} --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate:pgtyped": "pgtyped generate --config pgtyped.config.json",
    "clean": "rimraf dist"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@gis/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@pgtyped/cli": "^2.4.3",
    "@pgtyped/runtime": "^2.4.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
