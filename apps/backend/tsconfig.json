{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@/*": ["./*"],
      "@db/*": ["./db/*"],
      "@queries/*": ["./db/sql/*"],
      "@generated/*": ["./db/generated/*"],
      "@docs/*": ["./docs/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
